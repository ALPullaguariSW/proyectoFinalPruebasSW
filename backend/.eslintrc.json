{
	"env": {
		"es2022": true,
		"node": true
	},
	"languageOptions": {
		"ecmaVersion": 2022,
		"sourceType": "script"
	},
	"extends": ["eslint:recommended", "plugin:jest/recommended"],
	"plugins": ["jest"],
	"globals": {
		"jest": "readonly"
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single", { "avoidEscape": true }],
		"no-unused-vars": ["warn"],
		"no-undef": ["error"],
		"no-console": "off"
	},

}

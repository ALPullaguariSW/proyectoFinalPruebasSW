{
	"env": {
		"es2022": true,
		"node": true,
		"jest": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "script"
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single", { "avoidEscape": true }],
		"no-unused-vars": ["warn"],
		"no-undef": ["error"],
		"no-console": "off"
	}
}

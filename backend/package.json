{
  "name": "backend",
  "version": "1.0.0",
  "description": "API de reservas (Express + PostgreSQL + JWT)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --coverage --ci",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "eslint": "^9.11.1",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js",
      "utils.js",
      "sum.js",
      "!**/*.test.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 89,
        "statements": 89
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}

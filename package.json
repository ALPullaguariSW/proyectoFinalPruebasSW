{
  "name": "clima-conversion",
  "version": "1.0.0",
  "description": "Proyecto de conversión de temperatura y media móvil con CI/CD",
  "main": "src/utils/index.js",
  "scripts": {
    "test": "jest --coverage --ci",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "echo 'Build completed'",
    "deploy": "echo 'Deploy to GitHub Pages via Actions'"
  },
  "keywords": ["temperatura", "conversion", "media-movil", "ci-cd"],
  "author": "ALPullaguariSW",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {},
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
